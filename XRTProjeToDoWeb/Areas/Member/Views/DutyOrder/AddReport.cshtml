@*@model YSKProje.ToDo.Web.Models.ReportAddViewModel*@
@model ReportAddDto
@{
    ViewData["Title"] = "AddReport";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

<form method="post" asp-action="AddReport" class="w-100 mx-auto p-3">
    <div class="card border-info mb-3">
        <div class="lead p-3">
            <div class="card-header">
                <h4 class="card-title text-center">Şuan Bu Görev İçin Rapor Yazmaktasınız.</h4>
            </div>

            <div class="card-body">
                <p class="card-text">
                    <span class="text-danger">Görevin Adı : </span>@Model.Gorev.Ad
                </p>
                <p class="card-text">
                    <span class="text-danger">Görevin Açıklaması : </span>@Model.Gorev.Aciklama
                </p>
                <p class="card-text">
                    <span class="text-danger">Aciliyet Durumu : </span>@Model.Gorev.Urgency.Description
                </p>
            </div>

        </div>
    </div>


    <input type="hidden" asp-for="@Model.GorevId" />
    <div class="form-group">
        <label asp-for="@Model.Tanım">Tanım</label>
        <span asp-validation-for="@Model.Tanım" class="text-danger"></span>
        <input asp-for="@Model.Tanım" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Detay">Detay</label>
        <span asp-validation-for="@Model.Detay" class="text-danger"></span>
        <input asp-for="@Model.Detay" class="form-control" />
    </div>

    <div class="form-group">
        <a asp-action="Index" class="btn btn-warning btn-sm"><i class=" fas fa-chevron-circle-left mr-2"></i>Vazgeç</a>
        <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Kaydet</button>
    </div>
</form>
@section JavaScript
{
    <script src="~/lib/jqueryValidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}