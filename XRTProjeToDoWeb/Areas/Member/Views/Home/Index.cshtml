
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


    <div class="row mt-3">

        <div class="col-md-6">
            <div class="card border-primary text-center mb-3">

                <div class="card-body">
                    <h4 class="card-title">Tamamladığınız Görev Sayısı</h4>
                    @if (ViewBag.GorevSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.GorevSayisi</p>
                        <p>
                            <a asp-action="Index" asp-controller="Duty" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right "></i>
                                İncele
                            </a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir tamamlanmış göreviniz bulunmamaktadır.</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-primary text-center mb-3">

                <div class="card-body">
                    <h4 class="card-title">Tamamlamanız Gereken Görev Sayısı</h4>
                    @if (ViewBag.TamamlanmasıGerekenGorevSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.TamamlanmasıGerekenGorevSayisi</p>
                        <p>
                            <a asp-action="Index" asp-controller="DutyOrder" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right "></i>
                                İncele
                            </a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir  göreviniz bulunmamaktadır.</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-primary text-center mb-3">

                <div class="card-body">
                    <h4 class="card-title">Okunmamış Bildirim Sayısı</h4>
                    @if (ViewBag.OkunmamışBildirimSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.OkunmamışBildirimSayisi</p>
                        <p>
                            <a asp-action="Index" asp-controller="Notification" class="btn btn-light btn-sm">
                                <i class="fas fa-chevron-circle-right "></i>
                                İncele
                            </a>
                        </p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir okunmamış bildiriminiz bulunmamaktadır.</p>
                    }

                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card border-primary text-center mb-3">

                <div class="card-body">
                    <h4 class="card-title">Yazdığınız Rapor Sayısı</h4>
                    @if (ViewBag.RaporSayisi > 0)
                    {
                        <p class="card-text display-4">@ViewBag.RaporSayisi</p>
                    }
                    else
                    {
                        <p class="card-text lead">Herhangi bir raporunuz bulunmamaktadır.</p>
                    }

                </div>
            </div>
        </div>

    </div>


