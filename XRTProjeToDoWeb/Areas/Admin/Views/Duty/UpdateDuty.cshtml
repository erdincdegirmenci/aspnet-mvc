@*@model DutyUpdateViewModel*@ 
@model DutyUpdateDto
@{
    ViewData["Title"] = "UpdateDuty";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<form asp-action="UpdateDuty" method="post" class="w-75 mx-auto p-3">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Ad</label>
        <span asp-validation-for="Ad" class="text-danger"></span>
        <input type="text" asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label>Açıklama</label>
        <span asp-validation-for="Aciklama" class="text-danger"></span>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Aciliyet Durumu Seçiniz:</label>
        <span class="text-danger" asp-validation-for="UrgencyId"></span>
        <select asp-for="UrgencyId" class="form-control" asp-items="ViewBag.UrgencyList">
            <option hidden value="-1">Seçiniz</option>
        </select>
    </div>
    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check mr-2"></i>Değişiklikleri Kaydet</button>
</form>

@section JavaScript{
    <script src="~/lib/jqueryvalidate/jquery.validate.min.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}