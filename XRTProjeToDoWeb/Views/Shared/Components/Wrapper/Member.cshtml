@*@model AppUserListViewModel*@
@model AppUserListDto
@{
    string active = string.Empty;
    if (TempData["Active"] != null)
    {
        active = TempData["Active"].ToString();
    }
}

<div class="border-right" id="sidebar-wrapper">
    <div class="sidebar-heading text-center">
        <img src="~/img/@Model.Picture" alt="@Model.Name" class="w-95 img-thumbnail" style="height:10rem!important" />
    </div>
    <div class="list-group list-group-flush">
        <a asp-action="Index" asp-controller="Home" class="list-group-item list-group-item-action @(active=="home"?"active":"")"><i class="fas fa-home mr-2"></i>Anasayfa</a>

        <a asp-action="Index" asp-controller="DutyOrder" class="list-group-item list-group-item-action @(active=="dutyorder"?"active":"")"><i class="fas fa-arrow-alt-circle-down mr-2"></i>Gelen İş Emirleri</a>
        <a asp-action="Index" asp-controller="Duty" class="list-group-item list-group-item-action @(active=="duty"?"active":"")"><i class="fas fa-arrow-alt-circle-up mr-2"></i>Tamamladığım İşler</a>

        <a asp-action="Index" asp-controller="Notification" class="list-group-item list-group-item-action position-relative">
            <i class="fas fa-bell mr-2"></i>
            @if (ViewBag.BildirimSayisi > 0)
            {
                <sub class="badge badge-info badge badge-pill position-absolute  @(active=="profil"?"notification":"")" style="bottom:0.625rem!important; left:1.7rem!important"><small>@ViewBag.BildirimSayisi</small></sub>
            }
            Bildirimler
        </a>

        <a asp-action="Index" asp-controller="Profil" class="list-group-item list-group-item-action @(active=="profil"?"active":"")"><i class="fas fa-user mr-2"></i>Profilim</a>

        <a asp-area="" asp-action="SignOut" asp-controller="Home" class="list-group-item list-group-item-action"><i class="fas fa-sign-out-alt mr-2"></i>Çıkış Yap</a>
    </div>
</div>